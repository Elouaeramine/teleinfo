$nb= MySQL_num_rows($res); // checking how many lines it contains
if($nb==0) // system.out.println("there are no students with this id");
else {
   for($i=0; $i<$nb;$i++)
   {  $t=MySQL_fetch_array($res); // putting the result in  an array kol case feha information name, age , mark
      Name=$t['name'];
